<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.95"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineraLayoutMiddleColumn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.45"
        android:baselineAligned="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.70" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutFilters"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.60"
            android:baselineAligned="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayoutFiltersRight"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="0.30"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Jetzt das passende Servo finden"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="3dp"
                    android:text="Um das passende Graupner Servo für deine Bedürfnisse zu finden, hast du die Möglichkeit die Artikelnummer einzugeben oder nach bestimmten Eigenschaften zu suchen."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.70"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.50"
                    android:background="@drawable/button_style"
                    android:gravity="left|center_vertical"
                    android:onClick="gotoSelectArtikelnummer"
                    android:paddingLeft="10dp"
                    android:text="Artikelnummer"
                    android:textSize="10sp" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.50"
                    android:background="@drawable/button_style"
                    android:gravity="left|center_vertical"
                    android:onClick="gotoSelectOtherFeatures"
                    android:paddingLeft="10dp"
                    android:text="Eigenschaften"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSearch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.92"
            android:gravity="right" >
        </LinearLayout>
        <include layout="@layout/footer1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineraLayoutLeftColumn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.95"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineraLayoutRightColumn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.65"
        android:gravity="right"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>